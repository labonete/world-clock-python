# worldclock.kv (Corrected Version)

<CardLayout@BoxLayout>:
    # This is now just a styling rule for our cards
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(5)
    size_hint_y: None  # Allow cards to have a fixed height
    height: self.minimum_height # Set height based on content
    canvas.before:
        Color:
            rgba: 0.25, 0.25, 0.25, 1 # Dark grey background for the card
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]

<WorldClockLayout>:
    orientation: 'vertical'
    padding: dp(15)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: 0.18, 0.18, 0.18, 1 # Very dark background for the whole app
        Rectangle:
            pos: self.pos
            size: self.size

    # --- Each card is now a simple, styled layout with direct IDs ---

